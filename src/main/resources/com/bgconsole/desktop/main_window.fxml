<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="768"
            prefWidth="1280" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bgconsole.desktop.MainWindowController">
    <top>

        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <!--                        <MenuItem fx:id="newMenu" mnemonicParsing="false" onAction="#newLocation" text="New"/>-->
                        <!--                        <MenuItem fx:id="openMenu" mnemonicParsing="false" onAction="#openProject" text="Open..."/>-->
                        <MenuItem fx:id="profileManagerMenu" onAction="#openProfileManager"
                                  text="Profile manager..."/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem fx:id="quitMenu" mnemonicParsing="false" onAction="#quit" text="Quit"/>
                    </items>
                </Menu>
                <Menu text="Workspace">
                    <items>
                        <MenuItem text="New..." onAction="#newWorkspace"/>
                        <MenuItem text="Open..." onAction="#openWorkspace"/>
                        <MenuItem text="Remove" onAction="#removeWorkspace"/>
                    </items>
                </Menu>
                <Menu text="Project">
                    <items>
                        <MenuItem text="Create..." onAction="#createProject"/>
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#help" text="Help"/>
                        <MenuItem mnemonicParsing="false" onAction="#about" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>

    </top>
    <center>
        <SplitPane dividerPositions="0.29797979797979796" prefHeight="160.0" prefWidth="200.0"
                   BorderPane.alignment="CENTER">
            <items>
                <AnchorPane prefWidth="100.0">

                    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                AnchorPane.topAnchor="0.0">
                        <top>
                            <AnchorPane>
                                <ChoiceBox fx:id="profileSelector" onAction="#changeProfile"
                                           AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                            </AnchorPane>
                        </top>
                        <center>
                            <AnchorPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                        AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                <StackPane fx:id="listPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <children>
                                        <ListView fx:id="locationList"/>
                                    </children>
                                </StackPane>
                            </AnchorPane>
                        </center>
                    </BorderPane>
                </AnchorPane>
                <AnchorPane prefWidth="100.0">
                    <children>
                        <TilePane fx:id="projectPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </center>
</BorderPane>
